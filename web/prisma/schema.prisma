// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  password      String?
  image         String?
  onboarded     Boolean         @default(false)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  accounts      Account[]
  sessions      Session[]
  profile       UserProfile?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model OtpCode {
  id        String   @id @default(cuid())
  email     String
  code      String
  purpose   String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// New models for onboarding data
model UserProfile {
  id                     String    @id @default(cuid())
  userId                 String    @unique
  phoneNumber            String
  heardFrom              String
  referralCode           String?
  workType               WorkType
  notificationsEnabled   Boolean   @default(true)
  termsAcceptedAt        DateTime  @default(now())
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  user                   User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  selfEmployedProfile    SelfEmployedProfile?
  freelancerProfile      FreelancerProfile?
  remoteWorkerProfile    RemoteWorkerProfile?
  businessOwnerProfile   BusinessOwnerProfile?
  digitalTraderProfile   DigitalTraderProfile?
}

enum WorkType {
  SELF_EMPLOYED
  FREELANCER
  REMOTE_WORKER
  BUSINESS_OWNER
  DIGITAL_TRADER
}

model SelfEmployedProfile {
  id                 String      @id @default(cuid())
  profileId          String      @unique
  businessType       String
  businessTypeOther  String?
  registrationType   String
  businessName       String?
  description        String?
  startDate          DateTime?
  earningMethods     String[]    // Array of earning methods
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  profile            UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model FreelancerProfile {
  id                 String      @id @default(cuid())
  profileId          String      @unique
  freelanceType      String
  registrationType   String
  description        String?
  startDate          DateTime?
  earningMethods     String[]
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  profile            UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model RemoteWorkerProfile {
  id                 String      @id @default(cuid())
  profileId          String      @unique
  industry           String
  employmentType     String
  startDate          DateTime?
  paymentMethods     String[]
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  profile            UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model BusinessOwnerProfile {
  id                 String      @id @default(cuid())
  profileId          String      @unique
  industry           String
  registrationType   String
  companyName        String
  description        String?
  startDate          DateTime?
  employeeCount      String
  earningMethods     String[]
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  profile            UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model DigitalTraderProfile {
  id                 String      @id @default(cuid())
  profileId          String      @unique
  assetType          String
  registrationType   String
  platforms          String?
  startDate          DateTime?
  earningMethods     String[]
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  profile            UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}